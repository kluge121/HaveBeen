<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/searchCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오키나와 Okinawa"
        android:textColor="@color/search_city_name_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/searchCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일본"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:textColor="@color/search_country_name_color"
        app:layout_constraintTop_toBottomOf="@+id/searchCityName" />

</android.support.constraint.ConstraintLayout>