<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/searchFriendContentProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/sample_everland"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/searchFriendContentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:text="김혜자"
        android:textColor="@color/greyish_brown"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/searchFriendContentProfileImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchFriendContentAddInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:text="Additional info"
        android:textColor="#9b9b9b"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/searchFriendContentProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/searchFriendContentName" />

    <View
        android:id="@+id/createRoomCostDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent" />

    <CheckBox
        android:id="@+id/searchFriendContentCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>