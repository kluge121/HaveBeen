<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrowAlarmDot"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:src="@color/alarm_red"
        app:layout_constraintStart_toStartOf="@id/arrowAlarmProfileIv"
        app:layout_constraintTop_toTopOf="@+id/arrowAlarmProfileIv" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrowAlarmProfileIv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="18dp"
        android:src="@drawable/sample_everland"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/arrowAlarmTypeIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/green_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arrowAlarmProfileIv" />

    <TextView
        android:id="@+id/arrowAlarmContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:lineSpacingExtra="4sp"
        android:maxWidth="239dp"
        android:text="@string/alarm_test_message2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrowAlarmProfileIv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arrowAlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="3시간"
        android:textColor="#c8c8c8"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@id/arrowAlarmContent"
        app:layout_constraintTop_toBottomOf="@+id/arrowAlarmContent" />


    <ImageButton
        android:id="@+id/arrowAlarmArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:background="@null"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/arrowAlarmPartition"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowAlarmTime" />


</android.support.constraint.ConstraintLayout>